# TLS Configuration Example
# Copy this to terraform.tfvars and update with your values

redis_tls_config = {
  # Redis server address with TLS port
  address = "localhost:6380"  # Change to your Redis TLS endpoint
  
  # Redis authentication password
  password = "your-secure-redis-password"
  
  # Certificate file paths (relative to this directory)
  ca_cert_path     = "certs/ca.pem"      # CA certificate for server verification
  client_cert_path = "certs/client.crt"  # Client certificate for mutual TLS
  client_key_path  = "certs/client.key"  # Client private key for mutual TLS
  
  # Security settings
  insecure_skip_verify = false  # Set to true only for testing with self-signed certs
}

